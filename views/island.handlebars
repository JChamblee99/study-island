<div class="container">
  <div class="Island-header mt-mb-4 mx-auto text-center" style="width: 100px">
    <h2 class="text-white">{{island.name}}</h2>
  </div>
  <div class="description-container">
    <div class="card my-5" style="background-color: #334756;">
      <p class="island-description lead text-white">{{island.description}}</p>
    </div>
  </div>
  <div class="threads-container" style="background-color: #334756;">

    <div class="thread-detail-container d-grid gap-3">
      <a class="thread-link text-decoration-none mt-mb-5">
        <div class="list-group-item border-5" style="background-color: #2C394B;">
          <h5 class="text-white" style="text-indent: 20px">{{island.threads}}</h5>
        </div>
      </a>
    </div>

  </div>
</div>
